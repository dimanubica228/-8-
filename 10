fun repeatString(txt: String, n: Int): String {
    if (n == 0) {
        return ""
    } else {
        return txt + repeatString(txt, n - 1)
    }
}

fun main() {
    val text = "Hello, "
    val count = 3
    val repeatedText = repeatString(text, count)
    println(repeatedText) // Вывод: Hello, Hello, Hello,
}
